<%= form_with(model: order_item) do |form| %>
  <% if order_item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order_item.errors.count, "error") %> prohibited this order_item from being saved:</h2>

      <ul>
        <% order_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :order_id, style: "display: block" %>
    <%= form.select(:order_id, @orders.map{ |order| [order.doc_type+" "+order.doc_number,order.id]}) %>
  </div>

  <div>
    <%= form.label :equipment_id, style: "display: block" %>
    <%= form.select(:equipment_id, @equipments.map{ |equipment| [equipment.description+" - "+equipment.serial_number,equipment.id]}) %>
  </div>

  <div>
    <%= form.label :service_id, style: "display: block" %>
    <%= form.select(:service_id, @services.map{ |service| [service.description,service.id]}) %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :obs, style: "display: block" %>
    <%= form.text_area :obs %>
  </div>

  <div>
    <%= form.label :accessories, style: "display: block" %>
    <%= form.text_area :accessories %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
