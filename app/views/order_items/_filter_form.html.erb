<%= form_with(method: :get, class: "container-sm row") do |form| %>
  <div class="form-group mb-2 col">
    <%= form.label :order_id, "Pedido", style: "display: block" %>
    <%= form.select(:order_id, [["Selecione o Pedido", nil]] + @orders.map{ |order| [order.doc_type + " " + order.doc_number,order.id]}, {}, class: "form-select") %>
  </div>
  <div class="form-group mb-2 col">
    <%= form.label :section_id, "Setor", style: "display: block" %>
    <%= form.select(:section_id, [["Selecione o Setor", nil]] + @sections.map{ |section| [section.acronym,section.id]}, {}, class: "form-select") %>
  </div>
  <div class="form-group mb-2 col">
    <%= form.label :status, "Status", style: "display: block" %>
    <%= form.select(:status, [["Selecione o Status", nil]] + @status_options, {}, class: "form-select") %>
  </div>
  <%= form.submit "Filtrar", class:"btn btn-primary w-25 mt-auto mb-auto" %>
<% end %>