<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-2">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-2">
    <%= form.label :division, style: "display: block" %>
    <%= form.text_field :division, class: "form-control" %>
  </div>

  <div class="form-group mb-2">
    <%= form.label :subdivision, style: "display: block" %>
    <%= form.text_field :subdivision, class: "form-control" %>
  </div>

  <div class="form-group mb-2">
    <%= form.submit class:"btn btn-primary mb-2" %>
  </div>
<% end %>
