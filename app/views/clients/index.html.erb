<p style="color: green"><%= notice %></p>

<h1>Clients</h1>

<%= link_to "New client", new_client_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Division</th>
      <th>Subdivision</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.division %></td>
        <td><%= client.subdivision %></td>
        <td>
          <%= link_to "Show", client %>
          <%= link_to "Edit", edit_client_path(client) %>
          <%= button_to "Destroy", client, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>