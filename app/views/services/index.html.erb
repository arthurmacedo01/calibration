<h1>Serviços</h1>

<%= link_to "Novo serviço", new_service_path %>

<table class="table">
  <thead>
    <tr>
      <th>Código</th>
      <th>Descrição</th>
      <th>Setor</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.code %></td>
        <td><%= service.description %></td>
        <td><%= service.section.acronym %></td>
        <td>
          <%= link_to edit_service_path(service), class: "no-decoration" do %>
            <i class="fa fa-edit m-1"></i>
          <%end%>
          <%= link_to service, data: {turbo_method: "delete", turbo_confirm: 'Tem certeza?'}, class: "no-decoration" do %>
            <i class="fa fa-trash-o m-1"></i>
          <%end%>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


