<h1>Services</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Section</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.description %></td>
        <td><%= service.section.acronym %></td>
        <td>
          <%= link_to "Show", service %>
          <%= link_to "Edit", edit_service_path(service) %>
          <%= button_to "Destroy", service, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New service", new_service_path %>
