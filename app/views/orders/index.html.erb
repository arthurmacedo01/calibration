<h1>Pedidos</h1>

<%= link_to "Novo Pedido", new_order_path %>

<table class="table">
  <thead>
    <tr>
      <th>Tipo de Documento</th>
      <th>Número do Documento</th>
      <th>SIGAD</th>
      <th>NUP</th>
      <th>Data</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.doc_type %></td>
        <td><%= order.doc_number %></td>
        <td><%= order.sigad %></td>
        <td><%= order.nup %></td>
        <td><%= order.date %></td>
        <td>
          <%= link_to "Mostrar", order %>
          <%= link_to "Editar", edit_order_path(order) %>
          <%= button_to "Excluir", order, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


